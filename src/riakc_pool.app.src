{application, riakc_pool, [
    {description, "Riak client process pool"},
    {vsn, git},
    {modules, [riakcp_worker]},
    {registered, []},
    {applications, [kernel, stdlib]},
    {mod, {riakcp_app, []}},
    {env, [
        {pool_size, 3},
        {pool_max_overflow, 5},
        {pool_worker_timeout, 5000},
        {riak_address, "127.0.0.1"},
        {riak_port, 8087},
        {riak_options, [
            {auto_reconnect, true}
        ]}
    ]}
]}.
